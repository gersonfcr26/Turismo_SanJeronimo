<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gersoncardenas.turismo_sanjeronimo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HotelActivity"
            android:label="@string/title_activity_hotel"
            android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
        <activity
            android:name=".BarActivity"
            android:label="@string/title_activity_bar"
            android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
        <activity
            android:name=".TourActivity"
            android:label="@string/title_activity_tour"
            android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
        <activity
            android:name=".TownActivity"
            android:label="@string/title_activity_town"
            android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.AppCompat.Dialog">
        </activity>
    </application>

</manifest>
